<!DOCTYPE html>
<html lang="pl-PL" class="no-js">
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <title>{{ title }}</title>

    <meta name="description" content="{{ global.website.meta.og.description }}">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Place a favicon.ico in the root, along with all other favicons.
     Use http://www.favicomatic.com/ to generate favicons. -->
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="{{ relative }}apple-touch-icon-144x144.png" />
    <link rel="apple-touch-icon-precomposed" sizes="152x152" href="{{ relative }}apple-touch-icon-152x152.png" />
    <link rel="icon" type="image/png" href="{{ relative }}favicon-32x32.png" sizes="32x32" />
    <link rel="icon" type="image/png" href="{{ relative }}favicon-16x16.png" sizes="16x16" />

    <meta name="application-name" content="{{ global.website.name }}"/>
    <meta name="name" content="{{ global.website.name }}">
    <meta name="theme-color" content="#184690">
    <meta name="msapplication-TileColor" content="#FFFFFF" />
    <meta name="msapplication-TileImage" content="{{ relative }}mstile-144x144.png" />

    <!-- Facebook -->
    <meta property="og:title" content="{{ global.website.name }}">
    <meta property="og:type" content="website">
    <meta property="og:url" content="{{ global.website.url }}">
    <meta property="og:image" content="{{ relative }}public/images/facebook-image.png">
    <meta property="og:image:secure_url" content="{{ relative }}public/images/facebook-image.png">
    <meta property="og:description" content="{{ description or global.website.meta.og.description }}">


    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Anonymous+Pro:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">
    
    <!-- Styles -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ relative }}css/main.css">
    {% block styles %}{% endblock %}

    <!-- Fontawesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- Web App Manifest -->
    <link rel="manifest" href="{{ relative }}manifest.json">

    <body>
        <!-- Skip Link -->
        {% for link in global.skipLink %}
        <div class="container">
            <a class="sr-only sr-only-focusable" href="{{ link.href }}">{{ link.name }}</a>
        </div>
        {% endfor %}

        <!-- Main Navigation -->
        {% include "./partials/navigation.njk" %}

        <!-- Main Content -->
        <main id="main" role="main">
            {% block content %}{% endblock %}
        </main>

        <!-- Footer -->
        {% include "./partials/footer.njk" %}

        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
    
        <!-- Optional JavaScript -->
        {% block scripts %}{% endblock %}
        <script type="text/javascript" src="{{ relative }}js/main.min.js"></script>
    </body>
</html>
